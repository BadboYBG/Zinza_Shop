%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    .container
      = link_to t("myShop"), root_url, id: "logo"
      %nav.nav.navbar-nav
        - @categories.each do |category|
          %li= link_to category.name, category
        %li= link_to t("pages.contact.title"), "#"
        - if user_signed_in?
          %li
            = link_to "Users", "#"
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Hello,
              \#{current_user.name}
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", user_path
              %li= link_to "Settings", edit_user_registration_path
              %li.divider
              %li
                = link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li= link_to t("login"), new_user_session_path
          %li= link_to 'Sign Up', new_user_registration_path
        %li.shopping-cart
          = link_to carts_path, class: "cart" do
            %span
              %small#cart.number-c= many_carts
              %i.icon-shopping-cart
