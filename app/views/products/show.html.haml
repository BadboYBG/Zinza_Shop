.card
  .container-fliud
    .wrapper.row
      .preview.col-md-6
        .preview-pic.tab-content
          #pic-1.tab-pane.active= image_tag(@product.image,alt: "image_product")
      .details.col-md-6
        %h3.product-title= @product.name
        .rating
          .stars
            %span.fa.fa-star.checked
            %span.fa.fa-star.checked
            %span.fa.fa-star.checked
            %span.fa.fa-star
            %span.fa.fa-star
          %span.review-no 41 reviews
        %p.product-description= @product.detail
        %h4.price
          current price:
          %span
            $#{@product.price}
        %p.vote
          %strong 91%
          of buyers enjoyed this product!
          %strong (87 votes)
        %h5.sizes
          sizes:
          %span.size{"data-toggle" => "tooltip", :title => "small"} s
          %span.size{"data-toggle" => "tooltip", :title => "medium"} m
          %span.size{"data-toggle" => "tooltip", :title => "large"} l
          %span.size{"data-toggle" => "tooltip", :title => "xtra large"} xl
        %h5.colors
          colors:
          %span.color.orange.not-available{"data-toggle" => "tooltip", :title => "Not In store"}
          %span.color.green
          %span.color.blue
        .action
          = form_for :session, url: {controller: "carts", action: "create"}, remote: true do |f|
            = f.hidden_field :product_id, value: @product.id
            = f.button "Add to cart", class: "add-to-cart btn btn-default", onclick: "changeCart()", type: "submit"
           
