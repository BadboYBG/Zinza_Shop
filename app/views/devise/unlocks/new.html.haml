%h2= t('.title')
= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .actions
    = f.submit t('.button')
= render "devise/shared/links"
